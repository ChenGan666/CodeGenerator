@{
    var navList = CmsContentSortBussiness.GetList(10, "pcode='0'", "id asc");
    var currentSort = ContentSortHelper.CurrentSort;
}

<!-- 头部导航 -->

<nav class="navbar navbar-light bg-light fixed-top navbar-expand-lg shadow-sm">
    <div class="container">
        <a class="navbar-brand my-1" href="@GlobalLabel.SitePath/">
            <img src="@GlobalLabel.SiteLogo" class="logo-sm-height" height="50">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item @(currentSort.Scode == "0" ? "active":"")">
                    <a class="nav-link" href="@GlobalLabel.SitePath/">首页</a>
                </li>
                @foreach (var nav in navList)
                {
                    <li class="nav-item @(currentSort.Tcode == nav.Scode ? "active":"")">
                        <a class="nav-link" href="@nav.Link">@nav.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<!--占位导航栏-->
<div style="height:71px;" class="head-sm-height"></div>

