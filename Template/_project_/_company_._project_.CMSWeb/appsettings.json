{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "DbConnectionStrings": {
    "BaseDb": {
      "DbType": "MySql",
      "Connection": "server=localhost;userid=root;password=123456;database=basedb"
    },
    "LogBaseDb": {
      "DbType": "MySql",
      "IsBaseLog": "True",
      "Connection": "server=localhost;userid=root;password=123456;database=logbasedb"
    }
  },
  "CMSConfig": {

    // 授权码，多个授权码使用英文逗号隔开，如：'aaaaa,bbbbb'
    "sn": "31251F56DA",

    // 授权用户手机
    "sn_user": "",

    // 模板内容输出缓存开关
    "tpl_html_cache": 0,

    // 模板内容缓存有效时间（秒）
    "tpl_html_cache_time": 900,

    // 会话文件使用网站路径
    "session_in_sitepath": 1,

    // 默认分页大小
    "pageSize": 15,
    "casePageSize": 8,
    "productPageSize": 8,

    // 分页条数字数量
    "pageShowNum": 5,

    // 访问页面规则，如禁用浏览器、操作系统类型
    "access_rule": {
      "deny_bs": "MJ12bot,IE6,IE7"
    },

    // 上传配置
    "upload": {
      "format": "jpg,jpeg,png,gif,xls,xlsx,doc,docx,ppt,pptx,rar,zip,pdf,txt,mp4,avi,flv,rmvb,mp3,otf,ttf",
      "max_width": "1920",
      "max_height": ""
    },

    // 缩略图配置
    "ico": {
      "max_width": "1000",
      "max_height": "1000"
    },

    // 模块模板路径定义
    "tpl_dir": {
      "home": ""
    }
  }
}
